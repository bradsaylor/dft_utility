{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build dft executable",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/dft.c",
                "${workspaceFolder}/src/read_sequence.c",
                "${workspaceFolder}/src/direct_dft.c",
                "${workspaceFolder}/src/gtzl_dft.c",
                "${workspaceFolder}/src/fft_dit.c",
                "${workspaceFolder}/src/ifft_dit.c",
                "${workspaceFolder}/src/cli.c",
                "${workspaceFolder}/src/output.c",
                "${workspaceFolder}/src/fft_reverse_index_LUT.c",
                "${workspaceFolder}/src/fft_twiddle_factor_LUT.c",
                "-o",
                "dft",
                "-I${workspaceFolder}/include",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-pedantic",
                "-std=c11",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "tests/test_read_sequence.c",
                "src/read_sequence.c",
                "-Iinclude",
                "-o",
                "tests/test_read_sequence.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "./tests/test_read_sequence.out",
            "dependsOn": "build tests",
            "group": "test",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}